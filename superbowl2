<html>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" >
var jump_ball=function(ball_id,speed){
	this.ball_id=ball_id;
    this.color_pallet={0:"blue",1:"red",2:"black",3:"yellow",4:"purple",5:"pink",6:"gray"}
	this.speed=speed || {x:(25+Math.random()*5)*5,y:(200+Math.random()*50)*5};
	this.x=0;
	this.y=0;
	var circle = document.createElementNS("http://www.w3.org/2000/svg", "circle");
	this.inline=function(){
		circle.setAttribute("cx",this.x);
	    circle.setAttribute("cy",this.y);
	    circle.setAttribute("r",10);
	    circle.setAttribute("fill",this.color_pallet[Math.floor(Math.random()*6)]);
	    $("#svg_area").append(circle);
	}
	this.jump=function(){
		this.y=this.y+(this.speed.y+this.speed.y-0.98)/2*0.01;
		this.speed.y-=9.8;
		this.x=this.x+this.speed.x*0.01;
		this.reflect();
		if(this.y<=0 && this.speed.y<0){
			this.rebound();
		}
	}
	this.reflect=function(){
		circle.setAttribute("cx",this.x);
	    circle.setAttribute("cy",this.y);
	}
	this.rebound=function(){
		this.speed.y=this.speed.y*-0.8;
		this.friction();
		this.jump();
	}
	this.judgeConflict=function(){
		for(var ball_id in ball_array){
			if(ball_array.hasOwnProperty(ball_id)){
				var target_ball=ball_array[ball_id];
				var t_x=target_ball.x;
				var t_y=target_ball.y;
				if(Math.pow(Math.pow(t_x-x,2)+Math.pow(t_y-y,2),0.5)<=10){
					this.conflict(target_ball);
				}
			}
		}
	}
	this.conflict=function(target_ball){
		var x=this.speed.x;
		var y=this.speed.y;
		var tx=this.speed.x;
		var ty=this.speed.y;
	}
	this.friction=function(){
		this.speed.x=this.speed.x*(0.9+Math.random()*0.1);
	}
	this.remove=function(){
		$(circle).remove();
		clearInterval(timer);
		delete this;
		delete ball_array[this.ball_id];
	}
	this.earth_quake=function(x,y){
		var distance=Math.pow(this.x-x,2)+Math.pow(this.y-y,2);
		this.x+=(this.x-x)*9000/distance;
		this.y+=(this.x-x)*9000/distance;
		this.speed.x+=(this.x-x)*20000/distance;
		this.speed.y+=(this.y-y)*20000/distance;
		
	}
	var remove_count=0;
	var self=this;
	setTimeout(function(){self.inline();}, 0);
	var timer=setInterval(function(){
		if(self.speed.x<=10 && self.speed.x>=-10){
			remove_count++;
			if(remove_count>=4){
				self.remove();
			}
		}
		if(self.y>=0 || self.speed.y>0){
			self.jump();
		}
		else{
			self.rebound();
		}
	}, 10);
}
var ball_array={};
var ball_id=1;
//setTimeout(function(){self.inline();}, 0);
setInterval(function(){
	ball_array[ball_id]=new jump_ball(ball_id,null);
	ball_id++;
}, 200);

$(document).ready(function(){
	$("#svg_area").click(function(e){
		var x=e.offsetX;
		var y=e.offsetY;
		var circle2 = document.createElementNS("http://www.w3.org/2000/svg", "circle");
		circle2.setAttribute("cx",x);
	    circle2.setAttribute("cy",y);
	    circle2.setAttribute("r",10);
	    circle2.setAttribute("fill","transparent");
	    circle2.setAttribute("stroke","red");
	    circle2.setAttribute("stroke-width",10);
	    $("#svg_area").append(circle2);	
		 var timers=setInterval(function(){
			var s_width=circle2.getAttribute("r");
			s_width=s_width*1+30;
			circle2.setAttribute("r",s_width);
			if(s_width>=150){
				clearInterval(timers);
				$(circle2).remove();
			}
		}, 30);
		setTimeout(function(){
			for(var ball_id in ball_array){
					if(ball_array.hasOwnProperty(ball_id)){
						var target_ball=ball_array[ball_id];
						target_ball.earth_quake(x,y);
					}
			}	
		}, 0);
	});
});
</script>
<body>

<svg x=0 y=0 width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1"  id="svg_area" overflow="hidden"  >
</svg>
</body>
</html>
